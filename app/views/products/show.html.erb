<!-- Start page content -->
<div id="page-content" class="page-wrapper">
    <div class="zm-section single-post-wrap bg-white ptb-70">
        <div class="container">
            <div class="row">
                <!-- Start left side -->
                <div itemscope itemtype="http://schema.org/Product" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 columns">
                    <div class="row mb-40">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="section-title">
                                <h2 itemprop="name" class="h6 header-color inline-block uppercase"><%=@product.name%></h2>
                            </div>                                
                        </div>
                    </div>
                    <div class="row">
                        <!-- Start single post image formate-->
                        <div class="col-md-12">
                            <article class="zm-post-lay-single">
                                <div class="zm-post-dis">
                                    <div class="col-md-4 mb-40 product-show-image"  style="padding-left: 0px !important;">
                                        <% if @product.image.present? %> 
                                            <img itemprop="image" alt= "<%=@product.name%>" src="<%= @product.image_url(:product_show_smaller)%>" style = "border: 1px solid black;">
                                        <% else %>
                                            <img itemprop="image" alt= "<%=@product.name%>" src="<%= asset_path @product.default_image %>" style = "border: 1px solid black;">
                                        <% end %>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <span itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                                        <div class="pricelg">
                                            
                                        </div>
                                    </span>
                                    <h5 class="h5height">
                                        <% if @product.category.present? %>
                                             <a style ="color: #2ab081;" href="<%=products_path(@product.category.name)%>">
                                                <%= @product.category.name %></a>
                                        <% end %>
                                       
                                        <% if @product.sub_category.present? %>
                                             - 
                                            <% if @product.is_dom.present? %>
                                                <a style="color: #2ab081;" 
                                                    href="<%=products_path("Hybrid-#{@product.is_dom}")%>">Hybrid-<%=@product.is_dom%></a> 
                                            <% else %>
                                                <a style="color: #2ab081;" 
                                                    href="<%=products_path(@product.sub_category)%>"><%=@product.sub_category%></a>
                                            <% end %>
                                        <% end %>
                                        <!--thc cbd cbn-->
                                        <% if @product.med_thc.present? %>
                                         - THC: <%= @product.med_thc %>%
                                        <% end %>
                                        <% if @product.cbd.present? %>
                                         - CBD: <%= @product.cbd %>%
                                        <% end %>
                                        <% if @product.cbn.present? %>
                                         - CBN: <%= @product.cbn %>%
                                        <% end %>
                                    </h5>
                                    <div itemprop="description">
                                        <%=@product.description%>
                                    </div> 
                                    <div class ="soldby">
                                        <p>Produced By:
                                            <% @product.vendors.each_with_index do |vendor, index| %>
                                                <% if index + 1 == @product.vendors.size %>
                                                    <%= link_to vendor.name, vendor_path(vendor), :class => 'vendor_path'%>
                                                <% else %>
                                                    <%= link_to vendor.name, vendor_path(vendor), :class => 'vendor_path'%>,&nbsp;
                                                <% end %>
                                            <% end %>
                                        </p>
                                    </div>
                                    <div class ="row">
                                        <%= render "average_price_table" %>
                                    </div>
                                </div>
                            </article>
                        </div>
                        <!-- End single post image formate -->
                    </div>
                </div>
                <!-- End left side -->
                <div class="row">
                    <%= render "price_table" %>

                    <style>
                        div.dataTables_wrapper {
                            width: 100%;
                            margin: 0 auto;
                        }
                        table.dataTable thead .sorting{
                            background-image: url(<%= asset_path('sort_both.png') %>)
                        }
                        table.dataTable thead .sorting_asc{
                            background-image: url(<%= asset_path('sort_asc.png') %>)
                        }
                        table.dataTable thead .sorting_desc{
                            background-image: url(<%= asset_path('sort_desc.png') %>)
                        }
                        table.dataTable thead .sorting_asc_disabled{
                            background-image: url(<%= asset_path('sort_asc_disabled.png') %>)
                        }
                        table.dataTable thead .sorting_desc_disabled{
                            background-image: url(<%= asset_path('sort_desc_disabled.png') %>)
                        }
                    </style>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Start Products -->
